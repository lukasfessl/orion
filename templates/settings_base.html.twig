<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="{{ asset('css/admin.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/common.css') }}" rel="stylesheet" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/custom.js') }}" type="text/javascript"></script>
        {% block javascripts %}{% endblock %}
        <title>{% block title %}Orion{% endblock %}</title>
    </head>
    <body>
		<div id="header">
			<div class="header-right">
			{% if app.user %}
    			<a href="#" class="dropdown-toggle">{{ app.user.email }}</a>
    			<div class="user-menu dropdown-menu">
    				<a href="{{ path('app_settings_tilepack_tilepackpack') }}">Tile Pack Settings</a>
    				<a href="{{ path('logout') }}">Logout</a>
    			</div>
			{% else %}
				<a href="{{ path('app_login') }}">Login</a>
			{% endif %}
			</div>
		</div>

		<div id="left-panel">
			<ul>
            	<li id="menu-title">
            		Tile Pack Menu
            		<a class="btn btn-success" href="{{ path('app_settings_tilepack_addtilepack') }}">+ Add</a>
            	</li>
                {% for tilePack in menu.getTilePacks() %}
                	<li class="menu-item"><a class="{{ app.request.get('id') == tilePack.id ? 'active' }}"
                			href="{{ path('app_settings_tilepack_tilepackpack', {id: tilePack.id}) }}">{{ tilePack.name }}</a></li>
                {% endfor %}
            </ul>
		</div>
		<div id="content">
			{% form_theme form 'form/fields.html.twig' %}
    		{% block content %}
    			content here
    		{% endblock %}
		</div>

		{% block footer %}
{# 			<div id="footer">#}
{# 				&copy; Copyright 2019 by <a href="http://lukasfessl.cz">Lukáš Fessl</a>#}
{# 			</div>#}
		{% endblock %}

    </body>
</html>
